<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableRow>
            <TextView></TextView>
            <TextView
                android:id="@+id/title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:text="@string/title_string"
                android:textSize="36sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/teamA_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/teamA_title_string"
                android:textSize="28sp"/>
            <TextView></TextView>
            <TextView
                android:id="@+id/teamB_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/teamB_title_string"
                android:textSize="28sp"/>
        </TableRow>
        <TableRow>
            <TextView></TextView>
            <TextView
                android:id="@+id/teamA_score_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="28sp"/>
            <TextView></TextView>
            <TextView
                android:id="@+id/teamB_score_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="28sp"/>
        </TableRow>
        <TableRow>
            <TextView></TextView>
            <Button
                android:id="@+id/increase_TeamA_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increase_string" />
            <TextView></TextView>
            <Button
                android:id="@+id/increase_TeamB_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </TableRow>
        <TableRow>
            <TextView></TextView>
            <Button
                android:id="@+id/decrease_TeamB_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrease_string"/>
            <TextView></TextView>
            <Button
                android:id="@+id/decrease_TeamA_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decrease_string"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="10sp">
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point Factor"
                android:textSize="22sp" />
            <RadioGroup android:id="@+id/teamA_RadioGroup"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamAPoint2RadioButton"
                    android:text="2 Points" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamAPoint4RadioButton"
                    android:text="4 Points" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/teamAPoint6RadioButton"
                    android:text="6 Points" />
            </RadioGroup>
            <TextView></TextView>
        </TableRow>
    </TableLayout>
</FrameLayout>
